<% include partials/_header%>



    <div class="container ">
        <div class="row">
            <div class="col md 5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Insert a title" class="form-control">
                            </div>
                            <div class="form-group">
                                    <textarea name="description" cols="30" placeholder="Insert a description" class="form-control"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Add</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col md 7">
                <table class="table tbale-bordered table-hover">
                    <thead>
                        <tr>
                            <th>NÂ°</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                            <% if(tasks){ 
                                for(var i =0; i < tasks.length; i++) {
                            %>
                                    <tr>
                                        <td><%=(i+1)%></td>
                                        <td><%=tasks[i].title%></td>
                                        <td><%=tasks[i].description%></td>
                                        <td>
                                            <!--los redirecciona a la ruta y les pasa el dato a traves de la ruta-->
                                            <a href="/turn/<%=tasks[i]._id%>" class="btn <%=tasks[i].status ? 'btn-success' : 'btn-dark' %>">Done</a> <!--cambia el boton de acuerdo al status-->
                                            <a href="/delete/<%=tasks[i]._id%>" class="btn btn-danger">Delete</a>
                                            <a href="/edit/<%=tasks[i]._id%>" class="btn btn-primary">Edit</a>
                                        </td>
                                    </tr>
                                <%}%>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<% include partials/_footer%>